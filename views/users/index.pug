extends ../layouts/common.pug

block content
    h1 
        span.mr-5 USERS
        a.btn.mb-2.btn-dark(href="/users/create") New


    .d-flex.align-items-center
        form.ml-auto(action="/users/search", method="GET", class="d-flex")
            input(type="text", name="q", class="form-control")
            button(class="btn btn-dark ml-2") Search

    table.table
        tr
            th Name
            th Phone
            th Action

        each user in users
            tr
                td= user.name
                td= user.phone
                td 
                    a.btn.btn-success(href="/users/" + user.id) View